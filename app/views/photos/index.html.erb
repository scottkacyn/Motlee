<h1>Listing photos</h1>

<table>
  <tr>
    <th>User</th>
    <th>Event</th>
    <th>Caption</th>
    <th>Thumbnail</th>
    <th>Source</th>
    <th>Height</th>
    <th>Width</th>
    <th>Lat</th>
    <th>Lon</th>
    <th>Comment thread</th>
    <th>Like thread</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.user %></td>
    <td><%= photo.event %></td>
    <td><%= photo.caption %></td>
    <td><%= photo.thumbnail %></td>
    <td><%= photo.source %></td>
    <td><%= photo.height %></td>
    <td><%= photo.width %></td>
    <td><%= photo.lat %></td>
    <td><%= photo.lon %></td>
    <td><%= photo.comment_thread %></td>
    <td><%= photo.like_thread %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Photo', new_photo_path %>
