<table id="stories" class="table table-striped">
  <tr>
    <td>Event</td>
    <td>Poster</td>
    <td>Text</td>
  </tr>
<% for story in @stories %>
  <tr class="story">
    <td><%= link_to story.event.name, event_story_path(story.event, story) %></td>
    <td><%= story.user.name %></td>
    <td><%= story.body %></td>
  </tr>
<% end %>
</table> 

